<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".MenuActivity">

    <ImageView
        android:id="@+id/ivX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:contentDescription="@string/enrere"
        android:src="@drawable/ic_x"
        app:tint="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvPgPrincipal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingHorizontal="30dp"
        android:text="@string/pgPrincipal"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:fontFamily="@font/saira_medium"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ivX"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvPgForum"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/tvPgPrincipal"
        app:layout_constraintBottom_toTopOf="@id/tvPgForum"/>

    <TextView
        android:id="@+id/tvPgForum"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="30dp"
        android:text="@string/forum"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:fontFamily="@font/saira_medium"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/tvPgPrincipal"
        app:layout_constraintBottom_toTopOf="@+id/tvPgPreguntes"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/tvPgForum"
        app:layout_constraintBottom_toTopOf="@id/tvPgPreguntes"/>

    <TextView
        android:id="@+id/tvPgPreguntes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="30dp"
        android:text="@string/pregutes"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:fontFamily="@font/saira_medium"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/tvPgForum"
        app:layout_constraintBottom_toTopOf="@+id/tvPgInfo"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/tvPgPreguntes"
        app:layout_constraintBottom_toTopOf="@id/tvPgInfo"/>

    <TextView
        android:id="@+id/tvPgInfo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="30dp"
        android:text="@string/info"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:fontFamily="@font/saira_medium"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/tvPgPreguntes"
        app:layout_constraintBottom_toTopOf="@+id/tvPgAjuda"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/tvPgInfo"
        app:layout_constraintBottom_toTopOf="@id/tvPgAjuda"/>

    <TextView
        android:id="@+id/tvPgAjuda"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="30dp"
        android:text="@string/ajuda"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:fontFamily="@font/saira_medium"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/tvPgInfo"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>