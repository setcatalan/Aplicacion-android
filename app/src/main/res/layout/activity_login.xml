<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@drawable/fondo_difuminado">

    <ImageButton
        android:id="@+id/btn_close_edit"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:contentDescription="@string/menu"
        android:src="@drawable/back_svgrepo_com"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="@color/white"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tituloLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/saira_medium"
        android:text="@string/tituloLogin"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:hint="@string/nombreUsuario"
        android:fontFamily="@font/saira_medium"
        android:inputType="text"
        android:padding="12dp"
        android:background="@color/white"
        android:textColorHint="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/tituloLogin"
        app:layout_constraintBottom_toTopOf="@id/etPass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="50dp"
        tools:ignore="VisualLintTextFieldSize" />

    <EditText
        android:id="@+id/etPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:hint="@string/passUsuario"
        android:fontFamily="@font/saira_medium"
        android:inputType="text"
        android:padding="12dp"
        android:background="@color/white"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toTopOf="@id/btnConfirmarLogin"
        app:layout_constraintTop_toBottomOf="@+id/etUser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="50dp"
        tools:ignore="VisualLintTextFieldSize" />


    <Button
        android:id="@+id/btnConfirmarLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/noHayCuenta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="30dp"
        app:cornerRadius="15dp"
        android:fontFamily="@font/saira_medium"
        android:text="@string/textLogin"
        android:textSize="30sp"
        android:backgroundTint="@color/primary"
        tools:ignore="VisualLintButtonSize" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="30dp"
        android:text="@string/register"
        android:fontFamily="@font/saira_medium"
        android:backgroundTint="@color/primary"
        android:padding="10dp"
        app:cornerRadius ="15dp"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="VisualLintButtonSize" />
    <TextView
        android:id="@+id/noHayCuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/btnRegister"
        android:text="@string/text_noHayCuenta"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>